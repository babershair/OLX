        <div id="products-post">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div id="product-heading">
                                <h2>ADs</h2>
                                <img src="~/images/under-heading.png" alt="" >
                            </div>
                        </div>
                    </div>
                    @* /////////////////////////////////// *@
                    <div class="row">
                        <div class="filters col-md-12 col-xs-12">
                            <ul id="filters" class="clearfix">
                                <li><span class="filter" data-filter="all">All</span></li>
                                <li><span class="filter" data-filter=".electronics">Electronics</span></li>
                                <li><span class="filter" data-filter=".mobiles">Mobile</span></li>
                                <li><span class="filter" data-filter=".computers">Computer</span></li>
                                <li><span class="filter" data-filter=".laptops">Laptop</span></li>
                                <li><span class="filter" data-filter=".cars">Car</span></li>
                                <li><span class="filter" data-filter=".other">Other</span></li>
                            </ul>
                        </div>
                    </div>
                    <div class="row" id="Container">
                        
                    @foreach (var i in Model)
                    {
                        
                        if (@i.Category=="Electronics")
                        {                                
                                    <div class="col-md-3 col-sm-6 mix portfolio-item electronics">       
                                        <div class="portfolio-wrapper">                
                                            <div class="portfolio-thumb">
                                                <img src="@i.Image" alt="" />
                                                <div class="hover">
                                                    <div class="hover-iner">
                                                        <a class="fancybox" href="@i.Image"><img src="@i.Image" alt="" /></a>
                                                        <span>@i.Category</span>
                                                    </div>
                                                </div>
                                            </div>  
                                            <div class="label-text">
                                                <h3><a href="single-post.html">@i.Title</a></h3>
                                                <span class="text-category">@i.Price</span>
                                               
                                            </div>
                                        </div>          
                                    </div>
                                    @*///////////////////////////*@

                                  
                        } 
                        else if (@i.Category=="Mobiles")
