    <script type="text/javascript">
        $(document).ready(function () {
            $("#search-button").click(function () {
                var title = $("#search").val();


                $("#Container").children().remove();
                //alert("success");

                $.getJSON("/Home/selectByTitle?title=" + title, function (list) {
                    //alert("success2222");

                    if (list != null) {
                        $.each(list, function (i, x) {
                            $("#Container").append('<div class="col-md-3 col-sm-6 mix portfolio-item electronics">');
                            $("#Container").append('<div class="portfolio-wrapper"  style="width:213px;height:213px;"><div class="portfolio-thumb"><img src="' + x.Image + '" alt=""/><div class="hover"><div class="hover-iner"><a class="fancybox" href="' + x.Image + '"><img src="' + x.Image + '" alt="" /></a>');
                           
                            $("#Container").append('<span>' + x.Category + '</span>');

                            $("#Container").append('</div></div></div>');

                            $("#Container").append('<div class="label-text">');
                            $("#Container").append('<h3><a href="single-post.html">' + x.Title + '</a></h3>');
                            $("#Container").append('<span class="text-category">' + x.Price + '</span>');
                            $("#Container").append('</div></div></div>');

                        });
                    }
                    else {
                        $("#products-post").append('<p>Nothing Found</p> </div>');
                    }

                });

            });

        });
    </script>


